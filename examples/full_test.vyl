Print("=== VYL Language Feature Demonstration ===")
Print("")

Print("1. VARIABLE TYPES & ARITHMETIC")
Print("------------------------------")
var int a = 10
var int b = 20
var c = a + b
Print("a + b = ")
Print(c)
Print("")

Print("2. STRING OPERATIONS")
Print("-------------------")
var str1 = "Hello"
var len1 = Len(str1)
Print("Length of 'Hello' = ")
Print(len1)
var cmp = StringCompare("test", "test")
Print("StringCompare result = ")
Print(cmp)
Print("")

Print("3. ARRAYS")
Print("---------")
var int[3] numbers
numbers[0] = 10
numbers[1] = 20
numbers[2] = 30
var first = numbers[0]
var second = numbers[1]
Print("Array[0] = ")
Print(first)
Print("Array[1] = ")
Print(second)
Print("")

Print("4. CONTROL FLOW")
Print("---------------")
var x = 5
if (x > 3) {
    Print("x > 3 is true")
}
Print("")

Print("5. LOOPS")
Print("--------")
var count = 0
while (count < 3) {
    Print("count = ")
    Print(count)
    count = count + 1
}
Print("")

Print("=== ALL FEATURES WORKING ===")

